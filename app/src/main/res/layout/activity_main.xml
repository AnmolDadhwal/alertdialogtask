<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/h_gd_40"
        app:layout_constraintGuide_percent=".4"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/h_gd_50"
        app:layout_constraintGuide_percent=".5"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/h_gd_55"
        app:layout_constraintGuide_percent=".55"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/h_gd_65"
        app:layout_constraintGuide_percent=".65"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/v_gd_15"
        app:layout_constraintGuide_percent=".15"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/v_gd_35"
        app:layout_constraintGuide_percent=".35"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/v_gd_65"
        app:layout_constraintGuide_percent=".65"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/v_gd_85"
        app:layout_constraintGuide_percent=".85"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/etnum"
        android:hint="@string/Enter_any_number"
        android:textAlignment="center"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@id/h_gd_50"
        app:layout_constraintEnd_toEndOf="@id/v_gd_85"
        app:layout_constraintStart_toStartOf="@id/v_gd_15"
        app:layout_constraintTop_toTopOf="@id/h_gd_40"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btncal"
        android:text="@string/perform_calculation"
        app:layout_constraintTop_toTopOf="@id/h_gd_55"
        app:layout_constraintStart_toStartOf="@id/v_gd_35"
        app:layout_constraintEnd_toEndOf="@id/v_gd_65"/>
</androidx.constraintlayout.widget.ConstraintLayout>